@model ClinicaVeterinaria.Models.ViewModels.ExameFormViewModel




@{
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>

<h4>Exame</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Exame.Id" />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Exame.NomeDoExame" class="control-label"></label>
                <input asp-for="Exame.NomeDoExame" class="form-control" />
                <span asp-validation-for="Exame.NomeDoExame" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Exame.ValorExame" class="control-label"></label>
                <input asp-for="Exame.ValorExame" class="form-control" />
                <span asp-validation-for="Exame.ValorExame" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Exame.Realizado" class="control-label"></label>
                <input asp-for="Exame.Realizado" class="form-control" />
                <span asp-validation-for="Exame.Realizado" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Exame.ProprietarioId" class="control-label"></label>
                <select asp-for="Exame.ProprietarioId" asp-items="@(new SelectList(Model.Proprietarios, "Id", "NomeProprietario"))"
                        class="form-control"></select>
            </div>



            <div class="form-group">
                <label asp-for="Exame.AnimalId" class="control-label"></label>
                <select asp-for="Exame.AnimalId" asp-items="@(new SelectList(Model.Animals, "Id", "NomeAnimal"))"
                        class="form-control"></select>
            </div>

            <div class="form-group">
                <label asp-for="Exame.EspecieId" class="control-label"></label>
                <select asp-for="Exame.EspecieId" asp-items="@(new SelectList(Model.Especies, "Id", "NomeEspecie"))"
                        class="form-control"></select>
            </div>










            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>


        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


